<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">



	<TextView android:id="@+id/nickName" android:text="ttt"
		android:layout_alignParentLeft="true" android:layout_marginTop="5dip"
		android:gravity="center_vertical" android:layout_marginLeft="5dip"
		android:singleLine="true" android:layout_width="wrap_content"
		android:textStyle="bold" android:layout_height="wrap_content"
		android:textColor="@color/page" android:textSize="14px" />

	<TextView android:id="@+id/postTime" android:text="ttt"
		android:layout_marginTop="5dip" android:gravity="center_vertical"
		android:layout_alignParentRight="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="@color/white"
		android:textSize="12px" />

	<TextView android:id="@+id/floor" android:textColor="@color/white"
		android:layout_below="@id/nickName" android:layout_marginTop="1dip"
		android:layout_alignParentLeft="true" android:text="ttt"
		android:gravity="top" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="12px" />

	<TextView android:id="@+id/content" android:layout_width="fill_parent" android:autoLink="web"
		android:layout_toRightOf="@id/floor" android:layout_marginTop="1dip"
		android:layout_below="@id/nickName" android:layout_marginBottom="10dip"
		android:background="@drawable/bg_content2" android:layout_height="wrap_content" />
</RelativeLayout>

