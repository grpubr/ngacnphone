<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:umadsdk="http://schemas.android.com/apk/res/sp.phone.activity"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_weight="1" android:layout_height="wrap_content">
		<GridView android:id="@+id/gride" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:numColumns="3"
			android:verticalSpacing="5dip" />
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center" android:layout_width="fill_parent">
		<TextView android:gravity="center" android:id="@+id/tv_error"
			android:visibility="gone" android:layout_height="wrap_content"
			android:textSize="20dip" android:layout_width="wrap_content"
			android:textColor="#FF0000" />
		<TextView android:gravity="center" android:layout_height="wrap_content"
			android:textSize="22dip" android:layout_width="wrap_content"
			android:textColor="#9ACD32" android:id="@+id/tv_now" />
		<TextView android:gravity="center" android:layout_height="wrap_content"
			android:layout_marginTop="19dip" android:layout_width="wrap_content"
			android:textColor="#DCDCDC" android:id="@+id/tv_pre" />
	</LinearLayout>
</LinearLayout>